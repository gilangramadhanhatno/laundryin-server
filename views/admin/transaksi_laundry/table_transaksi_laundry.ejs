<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <!-- <th>ID Pelanggan</th> -->
      <th>Nama Pelanggan</th>
      <th>Nomor Telepon</th>
      <th>Status Cuci</th>
      <th>Status Pembayaran</th>
      <!-- <th>Total</th> -->
      <th>Tanggal Ambil</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < transaksiLaundry.length; i++) { %>
      <td><%= i + 1 %></td>
      <!-- <td><%= transaksiLaundry[i]._id %></td> -->
      <td><%= transaksiLaundry[i]?.pelanggan?.name ?? "-" %></td>
      <td><%= transaksiLaundry[i]?.pelanggan?.tel %></td>
      <td>
        <% if(transaksiLaundry[i].statusCuci === "belum dicuci") { %>
          <h6>
            <span class="badge badge-danger">belum dicuci</span>
          </h6>
          <% } else if(transaksiLaundry[i].statusCuci === "dicuci") { %>
            <h6>
              <span class="badge badge-warning">dicuci</span>
            </h6>
          <% } else { %>
          <h6>
            <span class="badge badge-success">selesai</span>
          </h6>
          <% } %></td>
          <td>
            <% if(transaksiLaundry[i].statusPembayaran === "belum bayar") { %>
              <h6>
                <span class="badge badge-danger">belum bayar</span>
              </h6>
              <% } else if(transaksiLaundry[i].statusCuci === "dicuci") { %>
                <h6>
                  <span class="badge badge-warning">dicuci</span>
                </h6>
              <% } else { %>
              <h6>
                <span class="badge badge-success">selesai</span>
              </h6>
              <% } %></td>
      <!-- <td>Rp.<%= parseInt(transaksiLaundry[i].jumlahKiloan * transaksiLaundry[i]?.paket?.harga).toLocaleString("id-ID") %></td> -->
      <td><%= transaksiLaundry[i].tanggalAmbil%></td>
      <!-- <td><%= transaksiLaundry[i].catatan %></td> -->
      <td>
        <form action="/transaksi-laundry/hapus/<%= transaksiLaundry[i]._id %>?_method=DELETE" method="post">
          <a href="/transaksi-laundry/detail/<%= transaksiLaundry[i].id %>" class="btn btn-success btn-circle btn-sm button-update">
            <i class="fas fa-eye"></i>
            Detail</a
          >
          <a href="/transaksi-laundry/ubah/<%= transaksiLaundry[i]._id %> " class="btn btn-sm btn-warning mb-1 mt-1">
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-sm btn-danger mb-1 mt-1">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
