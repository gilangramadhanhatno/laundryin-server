<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <a href="/transaksi-laundry" class="btn btn-warning">
        <i class="nav-icon fas fa-angle-left"> </i>
        Kembali
      </a>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img src="http://localhost:3000/uploads/<%= transaksiLaundry.thumbnail %>" alt="image" style="width: 300px; display: block" />

        <div class="row btn-status mt-3"></div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Nama Pelanggan</th>
                <th>Nomor Telepon</th>
                <th>Paket Laundry dan Jumlah Kiloan</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <td><%= transaksiLaundry.pelanggan.name %></td>
              <td><%= transaksiLaundry.pelanggan.tel %></td>
              <td><%= transaksiLaundry.paket.name %> - <%= transaksiLaundry.paket.waktuKerja %> - Rp.<%= parseInt(transaksiLaundry.paket.harga).toLocaleString("id-ID") %> * <%= transaksiLaundry.jumlahKiloan %> kg</td>

              <td>Rp.<%= parseInt(transaksiLaundry.paket.harga * transaksiLaundry.jumlahKiloan).toLocaleString("id-ID") %></td>
            </tbody>
          </table>

          <table class="table table-bordered mt-4" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Tanggal Ambil</th>
                <th>Status Cuci</th>
                <th>Catatan</th>
                <th>Pencucian</th>
              </tr>
            </thead>
            <tbody>
              <td><%= transaksiLaundry.tanggalAmbil %></td>
              <td>
                <% if(transaksiLaundry.statusCuci === "belum dicuci") { %>
                <h6>
                  <span class="badge badge-danger">belum dicuci</span>
                </h6>
                <% } else if(transaksiLaundry.statusCuci === "dicuci") { %>
                <h6>
                  <span class="badge badge-warning">dicuci</span>
                </h6>
                <% } else { %>
                <h6>
                  <span class="badge badge-success">selesai</span>
                </h6>
                <% } %>
              </td>
              <td><% if(transaksiLaundry.catatan) { %> <%= transaksiLaundry.catatan %> <% } else { %> - <% } %></td>

              <td>
                <% if(transaksiLaundry.statusCuci === "belum dicuci") { %>
                <form action="/transaksi-laundry/status-cuci/<%= transaksiLaundry.id %>/dicuci?_method=PUT" method="post">
                  <button type="submit" class="btn btn-warning btn-circle btn-sm button-update">
                    <i class="fa fa-retweet"></i>
                    Dicuci
                  </button>
                </form>

                <form action="/transaksi-laundry/status-cuci/<%= transaksiLaundry.id %>/selesai?_method=PUT" method="post">
                  <button type="submit" class="btn btn-sm btn-success mb-1 mt-1">
                    <i class="fa fa-check"></i>
                    Selesai
                  </button>
                </form>
                <% } else if (transaksiLaundry.statusCuci === "dicuci") { %>
                <form action="/transaksi-laundry/status-cuci/<%= transaksiLaundry.id %>/selesai?_method=PUT" method="post">
                  <button type="submit" class="btn btn-sm btn-success mb-1 mt-1">
                    <i class="fa fa-check"></i>
                    Selesai
                  </button>
                </form>
                <% } else { %> - <% } %>
              </td>
            </tbody>
          </table>

          <table class="table table-bordered mt-4" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Tanggal Antar</th>
                <th>Status Pembayaran</th>
                <th>Pembayaran</th>
              </tr>
            </thead>
            <tbody>
              <!-- <td><%= transaksiLaundry.tanggalAmbil %></td> -->
              <td><%= transaksiLaundry.tanggalAntar %></td>
              <td>
                <% if(transaksiLaundry.statusPembayaran === "belum bayar") { %>
                <h6>
                  <span class="badge badge-danger">belum bayar</span>
                </h6>
                <% } else if(transaksiLaundry.statusPembayaran === "cash") { %>
                <h6>
                  <span class="badge badge-success">cash</span>
                </h6>
                <% } else { %>
                <h6>
                  <span class="badge badge-primary">transfer</span>
                </h6>
                <% } %>
              </td>

              <td>
                <form action="" method="post">
                  <a href="" class="btn btn-success btn-circle btn-sm button-update">
                    <i class="fas fa-money-check-alt"></i>
                    Cash</a
                  >

                  <button class="btn btn-sm btn-primary mb-1 mt-1">
                    <i class="fa fa-exchange-alt"></i>
                    Transfer
                  </button>
                </form>
              </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.card-body -->
</div>
